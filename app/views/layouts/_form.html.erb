<%= simple_form_for(@joke) do |f| %>
<% if @joke.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @joke.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.submit 'Create' %>
  <% end %>
