<div class="new-edit-container">
  <h2>Sign in</h2>
<div class="form-container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: 'email', label_html: { class: 'icons envelope-icon' } %>
        <%= f.input :password, required: false, placeholder: 'password', label_html: { class: 'icons lock-icon' }%>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'form-button' %>
      </div>
    <% end %>
</div>
  <%= render "devise/shared/links" %>
</div>
